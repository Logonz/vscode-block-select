{
    "name": "block-select",
    "displayName": "Block Select",
    "description": "Quick select code between brackets, support for (),{} and [], <>",
    "version": "2.0.3",
    "publisher": "Logonz",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.34.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Logonz/vscode-block-select.git"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:block-select.select",
        "onCommand:block-select.select-include"
    ],
    "main": "./out/src/bracketSelectMain",
    "contributes": {
        "commands": [
            {
                "command": "block-select.select",
                "title": "BraSel:Select"
            },
            {
                "command": "block-select.undo-select",
                "title": "BraSel:UndoSelect"
            },
            {
                "command": "block-select.select-include",
                "title": "BraSel:SelectInclude"
            }
        ],
        "keybindings": [
            {
                "command": "block-select.undo-select",
                "key": "alt+z",
                "mac": "alt+z",
                "when": "editorTextFocus"
            },
            {
                "command": "block-select.select",
                "key": "alt+a",
                "mac": "alt+a",
                "when": "editorTextFocus"
            },
            {
                "command": "block-select.select-include",
                "key": "ctrl+alt+a",
                "mac": "cmd+alt+a",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "title": "Bracket Select configuration",
            "properties": {
                "block-select.bracketPairs": {
                    "type": "array",
                    "default": [
                        [
                            "(",
                            ")"
                        ],
                        [
                            "{",
                            "}"
                        ],
                        [
                            "[",
                            "]"
                        ]
                    ]
                },
                "block-select.sameBracket": {
                    "type": "array",
                    "default": [
                        "\"",
                        "'",
                        "`",
                        "/"
                    ],
                    "description": "double quote is escaped for JSON"
                }
            }
        }
    },
    "scripts": {
        "ext": "vsce package -o vscode-block-select.vsix && code --install-extension vscode-block-select.vsix",
        "vsix": "vsce package -o vscode-block-select.vsix",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "tslint -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.34.0",
        "tslint": "^5.19.0",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "@vscode/vsce": "^3.1.0",
        "global": "^4.4.0"
    }
}
